{
  "name": "vscode-import-cost",
  "publisher": "luxass",
  "displayName": "Import Cost",
  "version": "0.0.1",
  "description": "Calculate cost of imports, powered by esbuild",
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.73.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:astro"
  ],
  "browser": "./dist/browser/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "import-cost.toggle-declaration",
        "title": "Toggle Import Cost",
        "category": "Import Cost"
      },
      {
        "command": "import-cost.setup",
        "title": "Setup Import Cost",
        "category": "Import Cost"
      }
    ],
    "configuration": {
      "title": "Import Cost",
      "properties": {
        "import-cost.colors": {
          "type": "object",
          "description": "Colors for the import cost",
          "properties": {
            "small": {
              "type": "object",
              "description": "Colors for the import cost",
              "properties": {
                "dark": {
                  "type": "string",
                  "description": "Small size color for dark theme",
                  "default": "#7cc36e"
                },
                "light": {
                  "type": "string",
                  "description": "Small size color for light theme",
                  "default": "#7cc36e"
                }
              }
            },
            "medium": {
              "type": "object",
              "description": "Colors for the import cost",
              "properties": {
                "dark": {
                  "type": "string",
                  "description": "Medium size color for dark theme",
                  "default": "#7cc36e"
                },
                "light": {
                  "type": "string",
                  "description": "Medium size color for light theme",
                  "default": "#7cc36e"
                }
              }
            },
            "large": {
              "type": "object",
              "description": "Colors for the import cost",
              "properties": {
                "dark": {
                  "type": "string",
                  "description": "Large size color for dark theme",
                  "default": "#d44e40"
                },
                "light": {
                  "type": "string",
                  "description": "Large size color for light theme",
                  "default": "#d44e40"
                }
              }
            }
          }
        },
        "import-cost.sizes": {
          "type": "object",
          "description": "Sizes for the import cost",
          "properties": {
            "small": {
              "type": "number",
              "description": "Small size in kilo bytes",
              "default": 50
            },
            "medium": {
              "type": "number",
              "description": "Medium size in kilo bytes",
              "default": 100
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "concurrently \"pnpm run build:web --minify\" \"pnpm run build:ext --minify\"",
    "build": "concurrently \"pnpm run build:web\" \"pnpm run build:ext\"",
    "build:web": "node --experimental-modules ./scripts/build.mjs --target web --mode production",
    "build:ext": "node --experimental-modules ./scripts/build.mjs --target ext --mode production",
    "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:ext\"",
    "dev:web": "node --experimental-modules ./scripts/build.mjs --target web --watch",
    "dev:ext": "node --experimental-modules ./scripts/build.mjs --target ext --watch",
    "browser": "vscode-test-web --extensionDevelopmentPath=. --folder-uri=vscode-vfs://github/luxass/import-cost",
    "web:serve": "npx serve --cors -l 5000",
    "web:tunnel": "npx localtunnel -p 5000",
    "package": "pnpm vsce package --no-dependencies",
    "release": "pnpm vsce publish --no-dependencies",
    "lint": "eslint --cache {src,tests}/**/*.ts"
  },
  "dependencies": {
    "@luxass/import-cost": "workspace:*",
    "esbuild-wasm": "^0.17.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@vscode/test-web": "^0.0.33",
    "@vscode/vsce": "^2.16.0",
    "concurrently": "^7.6.0"
  }
}
