{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "dev",
      "group": "build",
      "problemMatcher": {
        "base": "$tsup-watch",
        "background": {
          "beginsPattern": "^vscode-import-cost:(.*): (ESM|CJS) Build start$",
          "endsPattern": "^vscode-import-cost:(.*): (ESM|CJS) .* Build success|^vscode-import-cost:(.*): (ESM|CJS) Build failed"
        }
      },
      "isBackground": true,
      "label": "npm: watch",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": {
        "base": "$tsup",
        "background": {
          "beginsPattern": "^vscode-import-cost:(.*): (ESM|CJS) Build start$",
          "endsPattern": "^vscode-import-cost:(.*): (ESM|CJS) .* Build success|^vscode-import-cost:(.*): (ESM|CJS) Build failed"
        }
      },
      "isBackground": true,
      "label": "npm: build",
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
